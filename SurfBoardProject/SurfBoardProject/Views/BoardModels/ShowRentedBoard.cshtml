@model List<SurfBoardProject.Models.Rental>

@{
    ViewData["Title"] = "Show Rented Boards";
}

<h1>Show Rented Boards</h1>

<table class="table">
    <thead>
        <tr>
            <th>Board Name</th>
            <th>Price</th>
            <th>Equipment</th>
            <th>Availability</th>
            <th>Rental Start Date</th>
            <th>Rental End Date</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Customer Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Boards.FirstOrDefault()?.Name</td>
                <td>@item.Boards.FirstOrDefault()?.Price</td>
                <td>@item.Boards.FirstOrDefault()?.Equipment</td>
                <td>@(item.Boards.FirstOrDefault()?.IsAvailable)</td>
                <td>@item.Start.ToShortDateString()</td>
                <td>@item.End.ToShortDateString()</td>
                <td>@item.Customers.FirstOrDefault()?.Name</td>
                <td>@item.Customers.FirstOrDefault()?.Email</td>
                <td>@item.Customers.FirstOrDefault()?.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RentalId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RentalId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RentalId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
